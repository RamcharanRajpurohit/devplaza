# Server Configuration
PORT=5000

# Database Configuration
MONGO_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database-name

# JWT Secrets (Generate strong random strings for production)
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Email Configuration (SMTP Settings)
# Note: For Gmail, use an App Password instead of your regular password for better security
MAIL_HOST=smtp.gmail.com
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password-here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Google OAuth (Optional - for Google Sign-In)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
